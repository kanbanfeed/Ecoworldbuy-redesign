<div class="cart-page">
    <div class="cart-header">
        <h1>Your Bag</h1>
    </div>

    <% if (cart.length === 0) { %>
        <div class="empty-cart">
            <h3 style="margin-bottom: 20px;">Your bag is empty</h3>
            <p style="color: #666; margin-bottom: 30px;">Looks like you haven't added anything yet.</p>
            <a href="/shop" class="btn-checkout" style="width: auto; display: inline-block; padding: 15px 40px;">Continue Shopping</a>
        </div>
    <% } else { %>
        
        <div class="cart-grid">
            <div class="cart-items">
                <% cart.forEach(item => { %>
                    <div class="cart-item">
                        <img src="<%= item.image %>" alt="<%= item.name %>" class="cart-img">
                        
                        <div class="item-info">
                            <h4><%= item.name %></h4>
                            
                            <div class="qty-selector">
                                <form action="/update-cart" method="POST" style="margin:0;">
                                    <input type="hidden" name="productId" value="<%= item.id %>">
                                    <input type="hidden" name="action" value="decrease">
                                    <button type="submit" class="qty-btn">-</button>
                                </form>

                                <span class="qty-number"><%= item.quantity %></span>

                                <form action="/update-cart" method="POST" style="margin:0;">
                                    <input type="hidden" name="productId" value="<%= item.id %>">
                                    <input type="hidden" name="action" value="increase">
                                    <button type="submit" class="qty-btn">+</button>
                                </form>
                            </div>

                            <form action="/update-cart" method="POST">
                                <input type="hidden" name="productId" value="<%= item.id %>">
                                <input type="hidden" name="action" value="remove">
                                <button type="submit" class="remove-btn">Remove</button>
                            </form>
                        </div>
                        
                        <div class="item-price">
                            $<%= (item.price * item.quantity).toFixed(2) %>
                        </div>
                    </div>
                <% }); %>
            </div>

            <div class="cart-summary">
                <div class="summary-row">
                    <span>Subtotal</span>
                    <span>$<%= total.toFixed(2) %></span>
                </div>
                <div class="summary-row">
                    <span>Shipping</span>
                    <span>Calculated at checkout</span>
                </div>
                
                <div class="total-row">
                    <span>Total</span>
                    <span>$<%= total.toFixed(2) %></span>
                </div>

                <a href="/checkout" style="text-decoration: none;">
                    <button class="btn-checkout">Checkout</button>
                </a>
                
                <div class="secure-text">
                    <i class="bi bi-lock-fill"></i> Secure checkout via Crowbar
                </div>
            </div>
        </div>

    <% } %>
</div>
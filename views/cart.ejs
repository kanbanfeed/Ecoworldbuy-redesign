<div class="cart-page">
    <div class="cart-header">
        <h1>Your Bag</h1>
    </div>

    <% if (cart.length === 0) { %>
        <div class="empty-cart">
            <h3 style="margin-bottom: 20px;">Your bag is empty</h3>
            <p style="color: #666; margin-bottom: 30px;">Looks like you haven't added anything yet.</p>
            <a href="/shop" class="btn-checkout" style="display: inline-block; width: auto; padding: 15px 40px; text-decoration: none;">Continue Shopping</a>
        </div>
    <% } else { %>
        
        <div class="cart-grid">
            <div class="cart-items">
                <% cart.forEach(item => { %>
                    <div class="cart-item">
                        <img src="<%= item.image %>" alt="<%= item.name %>" class="cart-img">
                        
                        <div class="item-info">
                            <h4><%= item.name %></h4>
                            
                            <div class="qty-selector">
                                <form action="/update-cart" method="POST" style="margin:0;">
                                    <input type="hidden" name="productId" value="<%= item.id %>">
                                    <input type="hidden" name="action" value="decrease">
                                    <button type="submit" class="qty-btn">-</button>
                                </form>

                                <span class="qty-number"><%= item.quantity %></span>

                                <form action="/update-cart" method="POST" style="margin:0;">
                                    <input type="hidden" name="productId" value="<%= item.id %>">
                                    <input type="hidden" name="action" value="increase">
                                    <button type="submit" class="qty-btn">+</button>
                                </form>
                            </div>

                            <form action="/update-cart" method="POST">
                                <input type="hidden" name="productId" value="<%= item.id %>">
                                <input type="hidden" name="action" value="remove">
                                <button type="submit" class="remove-btn">Remove</button>
                            </form>
                        </div>
                        
                        <div class="item-price">
                            $<%= (item.price * item.quantity).toFixed(2) %>
                        </div>
                    </div>
                <% }); %>
            </div>

            <div class="cart-summary">
                <div class="summary-row">
                    <span>Subtotal</span>
                    <span>$<%= total.toFixed(2) %></span>
                </div>
                <div class="summary-row">
                    <span>Shipping</span>
                    <span>Calculated at next step</span>
                </div>
                
                <div class="total-row">
                    <span>Total</span>
                    <span>$<%= total.toFixed(2) %></span>
                </div>

                <button id="checkoutBtn" class="btn-checkout" onclick="processCheckout()">
                    Secure Checkout
                </button>
                
                <div class="secure-text">
                    <i class="bi bi-lock-fill"></i> Secure checkout via Crowbar Pay
                </div>
            </div>
        </div>

    <% } %>
</div>

<script>
    // 1. The Click Action
    function processCheckout() {
        const btn = document.getElementById('checkoutBtn');
        
        // Change UI to show activity
        btn.innerText = "Processing...";
        btn.style.opacity = "0.7";
        btn.disabled = true; // Disable to prevent double-clicks

        // Check Session
        const session = localStorage.getItem('crowbar_session');

        setTimeout(() => {
            if (session) {
                // Logged in -> Go to Master Dashboard
                window.location.href = 'https://www.crowbarltd.com/demo-checkout';
            } else {
                // Not Logged in -> Go to Login
                window.location.href = '/login';
            }
        }, 800);
    }

    // 2. THE FIX: Reset Button on "Back" Navigation
    // This event fires every time the page appears (load or history back)
    window.addEventListener('pageshow', function(event) {
        const btn = document.getElementById('checkoutBtn');
        if (btn) {
            // Force reset the button state
            btn.innerText = "Secure Checkout";
            btn.disabled = false;
            btn.style.opacity = "1";
        }
    });
</script>
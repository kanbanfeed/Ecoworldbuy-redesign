<div class="shop-dark-wrapper">
    <div class="container">
        
        <div style="text-align: center; margin-bottom: 40px;">
            <h1 style="font-size: 3rem; margin-bottom: 10px;">The Collection</h1>
            <p style="color: green;">Sustainable goods for a better tomorrow.</p>
        </div>

        <div class="category-container">
            <button class="cat-pill active">
                <i class="bi bi-grid-fill"></i> All Items
            </button>
            <button class="cat-pill">
                <i class="bi bi-house-door-fill"></i> Home & Living
            </button>
            <button class="cat-pill">
                <i class="bi bi-droplet-fill"></i> Self Care
            </button>
            <button class="cat-pill">
                <i class="bi bi-airplane-fill"></i> Travel
            </button>
            <button class="cat-pill">
                <i class="bi bi-recycle"></i> Zero Waste
            </button>
        </div>

        <div class="product-grid">
            <% products.forEach(p => { %>
                
                <div class="shop-card-white">
                    <a href="/product/<%= p.id %>" style="text-decoration: none; color: inherit;">
                        <div class="white-card-img">
                            <img src="<%= p.image %>" alt="<%= p.name %>">
                        </div>
                        
                        <div class="white-card-info">
                            <div style="color: #FFC107; font-size: 0.8rem; margin-bottom: 5px;">★★★★★ (4.8)</div>
                            <h4><%= p.name %></h4>
                            <div class="price">$<%= p.price.toFixed(2) %></div>
                        </div>
                    </a>

                    <form action="/add-to-cart/<%= p.id %>" method="POST">
                        <input type="hidden" name="quantity" value="1">
                        <button class="btn-card-add">Add to Cart</button>
                    </form>
                </div>

            <% }) %>
        </div>

    </div>
</div>
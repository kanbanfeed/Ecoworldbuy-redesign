<section class="container fade-in-up" style="padding:4rem 0 2rem;">
    <p class="eyebrow">EcoWorld Collection</p>
    <div class="section-heading" style="align-items:flex-start;">
        <div>
            <h1 style="margin-bottom:0.5rem;">Build your sustainable capsule</h1>
            <p style="color:var(--text-muted); max-width:540px;">Minimal, durable, and circular goods for the home, commute, travel, and movement. Filter by vibe to discover your next staple.</p>
        </div>
        <a href="/cart" class="link-arrow">View cart <i class="bi bi-arrow-right"></i></a>
    </div>
</section>

<section class="container">
    <div class="grid">
        <% products.forEach((p, index) => { %>
            <div class="product-card fade-in-up" style="transition-delay: <%= (index % 4) * 50 %>ms">
                <a href="/product/<%= p.id %>" class="card-img-container">
                    <img src="<%= p.image %>" alt="<%= p.name %>" loading="lazy">
                </a>

                <span class="card-category">Sustainable</span>
                <a href="/product/<%= p.id %>">
                    <h3 class="card-title"><%= p.name %></h3>
                </a>
                <p style="color:var(--text-muted); font-size:0.95rem;"><%= p.desc %></p>
                <div class="card-price">$<%= p.price.toFixed(2) %></div>
                <span class="credit-chip"><i class="bi bi-lightning-charge"></i><%= Math.round(p.price) %> credits</span>

                <form action="/add-to-cart/<%= p.id %>" method="POST">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit" class="btn-add-mini">
                        <i class="bi bi-plus-lg"></i>
                    </button>
                </form>
            </div>
        <% }) %>
    </div>
</section>
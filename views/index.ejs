<% const heroPrimary = products[0]; %>
<% const heroStack = [products[4], products[2]]; %>

<section class="home-shell hero fade-in-up">
    <article class="hero-card">
        <span class="pill"><i class="bi bi-sparkles"></i> New Season Edit</span>
        <h1>Earth-first essentials for every ritual at home and on-the-go.</h1>
        <p>Thoughtfully crafted objects that feel premium, perform hard, and protect the planet. Designed for the everyday routines you actually keep.</p>
        <div style="display:flex; gap:1rem; flex-wrap:wrap;">
            <a href="/shop" class="btn btn-primary">Shop the collection</a>
            <a href="/cart" class="btn btn-outline">View my bag</a>
        </div>
        <div class="hero-meta">
            <div><strong>4.9/5</strong> Average community rating</div>
            <div><strong>72hr</strong> delivery to most states</div>
            <div><strong>2× credits</strong> for Crowbar members</div>
        </div>
    </article>

    <div class="hero-media">
        <article class="hero-feature">
            <div class="pill" style="width:max-content;"><i class="bi bi-leaf"></i> Spotlight</div>
            <h3 style="margin:0.8rem 0 0.4rem;"><%= heroPrimary.name %></h3>
            <p style="color:var(--text-muted); margin:0 0 1rem;">Electric clean, zero plastic impact.</p>
            <img src="<%= heroPrimary.image %>" alt="<%= heroPrimary.name %> hero" loading="lazy">
        </article>

        <div class="stack">
            <% heroStack.forEach(item => { %>
                <div class="stack-card">
                    <img src="<%= item.image %>" alt="<%= item.name %>" loading="lazy">
                    <small class="eyebrow" style="letter-spacing:0.1rem;">Curated</small>
                    <strong><%= item.name %></strong>
                    <span style="color:var(--text-muted); font-size:0.9rem;">$<%= item.price.toFixed(2) %></span>
                </div>
            <% }) %>
        </div>
    </div>
</section>

<section class="trust-bar home-shell fade-in-up">
    <div class="trust-item">
        <span><i class="bi bi-truck"></i></span>
        <p>Lightning-fast carbon neutral shipping</p>
    </div>
    <div class="trust-item">
        <span><i class="bi bi-arrow-clockwise"></i></span>
        <p>30-day no-questions returns</p>
    </div>
    <div class="trust-item">
        <span><i class="bi bi-credit-card"></i></span>
        <p>Crowbar Pay & secure checkout</p>
    </div>
    <div class="trust-item">
        <span><i class="bi bi-award"></i></span>
        <p>B Corp certified supply chain</p>
    </div>
</section>

<section class="home-shell fade-in-up" style="margin-bottom:4rem;">
    <div class="section-heading">
        <div>
            <p class="eyebrow">Shop by vibe</p>
            <h2>Curated drops for every routine</h2>
        </div>
        <a class="link-arrow" href="/shop">Browse all <i class="bi bi-arrow-right"></i></a>
    </div>

    <div class="category-grid">
        <a class="category-card" href="/shop">
            <img src="<%= products[5].image %>" alt="Desk reset">
            <span>Desk reset</span>
        </a>
        <a class="category-card" href="/shop">
            <img src="<%= products[3].image %>" alt="Daily commute">
            <span>Daily commute</span>
        </a>
        <a class="category-card" href="/shop">
            <img src="<%= products[2].image %>" alt="Farmers market">
            <span>Farmers market</span>
        </a>
        <a class="category-card" href="/shop">
            <img src="<%= products[10].image %>" alt="Movement">
            <span>Studio & movement</span>
        </a>
    </div>
</section>

<section class="crowbar-trending-section fade-in-up">
    <div class="home-shell">
        <div class="section-heading centered">
            <div>
                <p class="eyebrow">Trending Now</p>
                <h2>Best sellers loved by the community</h2>
            </div>
            <a class="link-arrow" href="/shop">View all <i class="bi bi-arrow-right"></i></a>
        </div>

        <div class="grid">
            <% products.slice(0, 8).forEach((p, index) => { %>
                <div class="product-card dark-card fade-in-up" style="transition-delay: <%= index * 50 %>ms">
                    <a href="/product/<%= p.id %>" class="card-img-container">
                        <img src="<%= p.image %>" alt="<%= p.name %>" loading="lazy">
                    </a>

                    <span class="card-category">Eco essentials</span>
                    <a href="/product/<%= p.id %>">
                        <h3 class="card-title"><%= p.name %></h3>
                    </a>
                    <p><%= p.desc %></p>
                    <div class="card-price">$<%= p.price.toFixed(2) %></div>
                    
                    <div style="display:flex; justify-content:space-between; align-items:center; width:100%; margin-top:auto;">
                         <span class="credit-chip">
                            <i class="bi bi-lightning-charge"></i><%= Math.round(p.price) %> credits
                        </span>
                        
                        <form action="/add-to-cart/<%= p.id %>" method="POST" style="margin:0;">
                            <input type="hidden" name="quantity" value="1">
                            <button type="submit" class="btn-add-mini" title="Quick Add">
                                <i class="bi bi-plus-lg"></i>
                            </button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>


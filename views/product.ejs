<div class="container pdp-wrapper fade-in-up">
    
    <div class="pdp-gallery">
        <img src="<%= product.image %>" alt="<%= product.name %>">
    </div>

    <div class="pdp-content">
        <div style="text-transform: uppercase; color: #d97706; font-weight: 700; margin-bottom: 0.5rem; letter-spacing: 1px;">
            Eco Certified
        </div>
        
        <h1><%= product.name %></h1>
        <div class="pdp-price-lg">$<%= product.price.toFixed(2) %></div>
        
        <p class="pdp-desc">
            <%= product.desc %> <br><br>
            Crafted with care for the planet. This item is plastic-free, 
            biodegradable, and shipped in recycled packaging.
        </p>

        <form action="/add-to-cart/<%= product.id %>" method="POST" class="pdp-actions">
            <input type="number" name="quantity" value="1" min="1" max="10" class="qty-input">
            <button type="submit" class="btn-main">
                Add to Cart
            </button>
        </form>

        <div style="display: flex; gap: 2rem; margin-top: 3rem; color: var(--text-muted);">
            <div style="text-align: center;">
                <i class="bi bi-box-seam" style="font-size: 1.5rem; color: var(--primary);"></i>
                <div style="font-size: 0.8rem; margin-top: 5px;">Plastic Free</div>
            </div>
            <div style="text-align: center;">
                <i class="bi bi-airplane" style="font-size: 1.5rem; color: var(--primary);"></i>
                <div style="font-size: 0.8rem; margin-top: 5px;">Global Ship</div>
            </div>
            <div style="text-align: center;">
                <i class="bi bi-shield-check" style="font-size: 1.5rem; color: var(--primary);"></i>
                <div style="font-size: 0.8rem; margin-top: 5px;">Warranty</div>
            </div>
        </div>
        
        <div style="margin-top: 4rem; padding-top: 2rem; border-top: 1px solid #eee;">
            <h3>Reviews (<%= typeof reviews !== 'undefined' ? reviews.length : 0 %>)</h3>
            <% if (typeof reviews !== 'undefined') { %>
                <% reviews.forEach(r => { %>
                    <div style="margin-top: 1rem; background: #f8fafc; padding: 1rem; border-radius: 8px;">
                        <strong><%= r.user %></strong> <span style="color: #f59e0b;">★★★★★</span>
                        <p style="font-size: 0.9rem; color: #666; margin-top: 0.25rem;"><%= r.text %></p>
                    </div>
                <% }) %>
            <% } %>
        </div>

    </div>
</div>
<div class="pdp-container">
    
    <div class="pdp-image-wrap">
        <img src="<%= product.image %>" alt="<%= product.name %>">
    </div>

    <div class="pdp-info">
        
        <div class="pdp-breadcrumb">
            <a href="/">Home</a> / <a href="/shop">Shop</a> / <span>Product</span>
        </div>

        <h1 class="pdp-title"><%= product.name %></h1>
        <div class="pdp-price">$<%= product.price.toFixed(2) %></div>

        <p class="pdp-description">
            <%= product.desc %> <br><br>
            Designed for the modern, eco-conscious lifestyle. Made from ethically sourced materials that are durable, sustainable, and plastic-free.
        </p>

        <form action="/add-to-cart/<%= product.id %>" method="POST" class="pdp-form">
            <input type="number" name="quantity" value="1" min="1" max="10" class="qty-input-lg">
            <button type="submit" class="btn-add-large">
                <i class="bi bi-bag-plus"></i> Add to Cart
            </button>
        </form>

        <div class="pdp-features">
            <div class="feature-item">
                <div class="feature-icon"><i class="bi bi-truck"></i></div>
                <span>Free Shipping over $50</span>
            </div>
            <div class="feature-item">
                <div class="feature-icon"><i class="bi bi-shield-check"></i></div>
                <span>Secure Checkout</span>
            </div>
            <div class="feature-item">
                <div class="feature-icon"><i class="bi bi-recycle"></i></div>
                <span>Plastic-Free Packaging</span>
            </div>
            <div class="feature-item">
                <div class="feature-icon"><i class="bi bi-arrow-counterclockwise"></i></div>
                <span>30-Day Returns</span>
            </div>
        </div>

    </div>
</div>